<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:background="@drawable/bg_card"
    android:padding="12dp" android:layout_marginVertical="6dp"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar" android:layout_width="40dp" android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"/>

    <LinearLayout
        android:orientation="vertical" android:layout_marginStart="12dp"
        android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvTitle" android:text="Thanh"
            android:textColor="@color/dm_text_primary" android:textStyle="bold"
            android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tvSubtitle" android:text="I hate IRC client"
            android:textColor="@color/dm_text_secondary" android:ellipsize="end" android:maxLines="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:id="@+id/tvTime" android:text="2m"
        android:textColor="@color/dm_text_secondary" android:textSize="12sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
